{
  "name": "react-super-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "yup": "^1.3.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "NODE_OPTIONS='--no-deprecation' react-scripts test",
    "test:coverage": "NODE_OPTIONS='--no-deprecation' react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "check-ports": "./scripts/check-ports.sh",
    "start:services": "./scripts/start-services.sh up --build",
    "start:services:detached": "./scripts/start-services.sh up -d --build",
    "db:init": "./scripts/init-database.sh",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose stop postgres",
    "db:restart": "docker-compose restart postgres",
    "db:status": "docker-compose ps postgres",
    "db:logs": "docker-compose logs -f postgres",
    "db:shell": "docker-compose exec postgres psql -U ${POSTGRES_USER:-superapp_user} -d ${POSTGRES_DB:-react_super_app}"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/**/*.test.{js,jsx}",
      "!src/**/__tests__/**",
      "!src/**/__mocks__/**"
    ]
  }
}
